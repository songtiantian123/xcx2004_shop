<!--index.wxml-->
<!--轮播图-->
   <swiper class='u-wrp-bnr' indicator-dots='true' autoplay='true' interval='5000' duration='1000' circular='true'>
  <block wx:for="{{bnrUrl}}" wx:for-index="index">
    <swiper-item>
      <image src='{{item.url}}' class='u-img-slide' mode='aspectFill'></image>
    </swiper-item>
  </block>
</swiper>

<!--导航栏-->
<view class="nav">
  <span>全部</span>
  <span>猫粮</span>
  <span>狗粮</span>
  <span>玩具</span>
  <span>保健</span>
  <span>零食</span>
</view>

<!--列表 开始-->
<view class="list">
<view class="item" wx:for="{{goods}}" data-goodsid="{{item.goods_id}}" bindtap="goodsDetail">
  <view class="img">
      <image src="{{item.goods_img}}" style="width: {{imagewidth}}px; height: {{imageheight}}px;" alt=""></image>
  </view>
  <view class="content">
     <view class="goods_name">{{item.goods_name}}</view>
     <view class="goods_brand">Nokic</view>
     <view class="shop_price">{{item.shop_price}}</view>
  </view>
  <!--列表 结束-->
</view>
</view>