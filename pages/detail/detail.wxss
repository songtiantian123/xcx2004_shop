/* pages/detail/detail.wxss */
/* 商品详情页*/
.details-box{
      margin-top:0px;padding:0 15px;font-size: 13px;background:#fff;
}
.details-box .details-nav .wxParse .shop image{
    width: 720rpx;
    height:600rpx;
}
.shop{
   position: relative;
}
.shop swiper{
   height:300px;
}
.shop .tran{
   position: absolute;
   bottom: 10px;
   right: 10px;
   background:#333;
   opacity:0.6;
   border-radius:20rpx;
   color:white;
}
.blank{
    margin-top: 80px;
    background-color: gainsboro;
    border: 1px solid red;
}

/** 详情页底部导航 开始 **/
.bottom-nav .iconfont
{
    font-size:15px;
}

.bottom-nav .nav-icon
{
    float:left;
    margin-top: 85px;
    /* background-color: red; */
    /* background-color:#eeeeee; */
    flex: 0.5;
    text-align: center;
}
/** 加入购物车 **/
.bottom-nav .nav-addcart {
    float:left;/** 左浮动 **/
    margin-top: 50px;/** 与上边相距50px 的距离 **/
    flex: 2;
    width:85px; /** 加入购物车的宽度 85px **/
    line-height: 85rpx; /** 加入购物车中文 字的行高 **/
    text-align: center;/** 加入购物车中 文字居中对齐 **/
    background-color: orange;/** 加入购物车的背景颜色 **/
    color: #fff; /** 文字颜色 白色 **/
}
/** 立即购买 **/
.bottom-nav .nav-buynow {
    float:left;
    margin-top: 50px;
    flex: 1;
    width: 85px;
    height:36px;
    line-height: 80rpx;
    text-align: center;
    background-color: #ffcc00;
    color: #fff;

}
/** 分享图标移动 **/
.bottom-nav .icon{
    margin-left:250px;
}
/** 去除botton按钮默认的样式 **/
button::after{
    border:none;/** button 边框线消失 **/
    border-radius:0;
    background-color:transparent;/** button按钮自带背景色变为空白 **/
}