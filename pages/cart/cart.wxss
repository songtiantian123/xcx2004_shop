/** 购物车头部 **/
.box{
   margin-top: 500rpx; /**  **/
   margin-left: 255rpx; /**  **/
}
.box #c .null{ /** 购物车空的页面 **/
   color:grey; /** 文字颜色 **/
   font-size: 14px; /** 文字大小 **/
   font-weight: bold; /** 文字加租 **/
} 
.page-box{
   background-color:#eee;
}
.cart-top{ /** 顶部 **/
   display:flex;    /** 固定定位 **/
   background-color:#eee;  /** 背景颜色 **/
   padding:10rpx; /** 外边距 **/
   height:80rpx; /** 高 **/
   line-height:80rpx;  /** 行高 **/
}
.cart-top .top-left{
   flex:1;
}
/** 购物车信息 **/
.item-list .item{
   display:flex;
   align-items:center;
   border-bottom:1px solid #eee;
}
.item-list .item image{
   width:200rpx;
   height:200rpx;
}
.item-list .item .content{
   margin-left:15px;
   font-size:30rpx;
}
.item-list .item .content .price-info{
   display:flex;
   padding: 15rpx 0;
}
.item-list .item .content .price-info .goods_price{
   color:#fc0;
}
.item-list .item .content .price-info .number{
   display:flex;
   border:1rpx solid #eee;
   border-radius:10rpx;
   text-align:center;
   margin-left:120rpx;
}
.item-list .item .content .price-info .number .decr{
   width:40rpx;
   height:70rpx;
   line-height:70rpx;
   text-align:center;
   border-right:1rpx solid #eee;
}
.item-list .item .content .price-info .number .incr{
   width:40rpx;
   height:70rpx;
   line-height:70rpx;
   text-align:center;
   text-align:center;
   border-left:1rpx solid #eee;
}
.item-list .item .content .price-info .number text{
   width:40rpx;
   height:70rpx;
   line-height:70rpx;
   text-align:center;
   text-align:center;
}
.item-list .item .content .price-info .delete{
   border:1rpx solid #eee;
   margin-left:10px;
   font-size:24rpx;
   align-items:center;
   width:70rpx;
   height:70rpx;
   line-height:70rpx;
   text-align:center;
   border-radius:10rpx; /** 使正方形 四边 变为 圆角 **/
}
.bottom-box{
   display:flex;
   background-color:#fff;
   width:100%;
   height:100rpx;
   align-items:center;
   position:fixed;
   bottom:0;
   left:0;
}
.bottom-box .all{
   font-size:30rpx;
   width:200rpx;
   padding-left:20rpx;
}
.bottom-box .bottom-price{
   font-size:30rpx;
   flex:1;
}
.bottom-box .bottom-price .price{
   color:red;
}
.bottom-box .btn{
   width:130rpx;
   text-align:center;
   border-radius:10rpx;
   font-size:30rpx;
   height:60rpx;
   line-height:60rpx;
   margin-right:20rpx;
   background-color:orange;
   color:#fff;
}