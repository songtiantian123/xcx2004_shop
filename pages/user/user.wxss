/* pages/user/user.wxss */
/** 获取用户信息并登录 开始 **/
page{
  height:100%;
}
.page-box{
  background-color:#eee;
  height:5%;
  padding-top:10rpx;
}
.login-info{
  display:flex;
  height:170rpx;
  background-color:#fff;
  padding:10rpx 20rpx;
}
.login-info image{
  width:160rpx;
  height:160rpx;
}
.login-info .login{
  margin-left:30rpx;
}
.login-info .login .top{
  font-size:36rpx;
  margin-top:30rpx;
}
.login-info .login .desc{
  font-size:25rpx;
  color:#e00;
}
.btn-login{
  width:100%!important;
}
/** 获取用户信息并登录 结束 **/

.my{

  margin: 30rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
}
.my .my-item{
  width: 750rpx;
  background: #ffffff;
  padding: 0
}
.my .my-item .myitem-icon{
  flex: 1;
}
.my .my-item .myitem-icon image{
  width: 45rpx;
  height: 45rpx;
  padding: 37.5rpx 0;
}
.my .my-item .myitem-name{
  flex: 5;
  text-align: left;
  font-size: 34rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}
.my .my-item:last-child .myitem-name{
  border-bottom: none;
  padding-bottom:20px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f0f4f3;
}

.body {
  position: absolute;
  background-color: #f0f2f5;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
}

.flex-wrp {
  display: flex;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
}